# Environment Configuration
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=sqlite:///./glucopilot.db
DATABASE_ECHO=False

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Dexcom Configuration
DEXCOM_USERNAME=your-dexcom-username
DEXCOM_PASSWORD=your-dexcom-password
DEXCOM_OUS=False

# AI/ML Configuration
HUGGINGFACE_TOKEN=your-huggingface-token
LOCAL_MODEL_PATH=./models/
USE_LOCAL_MODEL=True
MODEL_NAME=microsoft/DialoGPT-medium

# Reddit Integration
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=GluCoPilot/1.0.0

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/glucopilot.log

# Data Processing
GLUCOSE_SYNC_INTERVAL=300  # 5 minutes in seconds
PATTERN_ANALYSIS_INTERVAL=3600  # 1 hour in seconds
REDDIT_SYNC_INTERVAL=86400  # 24 hours in seconds

# Cache Configuration
CACHE_TTL=3600  # 1 hour in seconds
REDIS_URL=redis://localhost:6379/0

# Health Kit Bridge
HEALTHKIT_BRIDGE_URL=http://localhost:3001
