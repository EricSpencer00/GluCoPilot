{
  "name": "glucopilot-mobile",
  "version": "1.0.0",
  "description": "GluCoPilot - AI-Powered Diabetes Management Mobile App",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start --clear",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "eject": "expo eject",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules/ && npm cache clean --force",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@invertase/react-native-apple-authentication": "^2.4.1",
    "@kingstinct/react-native-healthkit": "^9.0.11",
    "@react-native-async-storage/async-storage": "1.21.0",
    "@react-native-community/datetimepicker": "7.7.0",
    "@react-native-community/netinfo": "11.1.0",
    "@react-native-community/slider": "4.4.2",
    "@react-native-picker/picker": "2.6.1",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.5.0",
    "dotenv": "^17.2.1",
    "expo": "~50.0.17",
    "expo-apple-authentication": "~6.3.0",
    "expo-auth-session": "~5.4.0",
    "expo-barcode-scanner": "~12.9.0",
    "expo-camera": "~14.1.3",
    "expo-constants": "~15.4.6",
    "expo-dev-client": "~3.3.11",
    "expo-document-picker": "~11.10.1",
    "expo-font": "~11.10.3",
    "expo-linear-gradient": "~12.7.2",
    "expo-linking": "~6.2.2",
    "expo-notifications": "~0.27.6",
    "expo-secure-store": "~12.8.1",
    "expo-splash-screen": "~0.26.5",
    "expo-status-bar": "~1.11.1",
    "expo-updates": "~0.24.12",
    "expo-web-browser": "~12.8.2",
    "lottie-react-native": "6.5.1",
    "react": "18.2.0",
    "react-native": "0.73.6",
    "react-native-chart-kit": "^6.12.0",
    "react-native-config": "^1.5.6",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-paper": "^5.10.1",
    "react-native-reanimated": "~3.6.2",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0",
    "react-native-vector-icons": "^10.0.0",
    "react-redux": "^8.1.2",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.45",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.45.0",
    "eslint-config-expo": "~7.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.3.1",
    "typescript": "~5.3.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/android/",
      "/ios/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|expo|@expo|@unimodules|unimodules|sentry-expo|native-base|react-clone-referenced-element|@react-native-community|expo-.*|@expo/.*|react-navigation|@react-navigation/.*|@sentry/.*|react-native-svg|react-native-chart-kit)/)"
    ]
  },
  "private": true,
  "author": "GluCoPilot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EricSpencer00/GluCoPilot.git"
  },
  "keywords": [
    "diabetes",
    "glucose",
    "cgm",
    "health",
    "react-native",
    "expo",
    "ai",
    "healthcare"
  ]
}
