{
  "name": "glucopilot-mobile",
  "version": "1.0.0",
  "description": "GluCoPilot - AI-Powered Diabetes Management Mobile App",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace GluCoPilot.xcworkspace -scheme GluCoPilot -configuration Release",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf node_modules/ && npm cache clean --force",
    "reinstall": "npm run clean && npm install",
    "pod-install": "cd ios && pod install"
  },
  "dependencies": {
    "@invertase/react-native-apple-authentication": "^2.4.1",
    "@kingstinct/react-native-healthkit": "^8.7.2",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-community/datetimepicker": "^7.7.0",
    "@react-native-community/netinfo": "^11.1.0",
    "@react-native-community/slider": "^4.4.2",
    "@react-native-picker/picker": "^2.6.1",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/stack": "^6.3.17",
    "@reduxjs/toolkit": "^1.9.5",
    "@types/react-native-vector-icons": "^6.4.18",
    "axios": "^1.5.0",
    "dotenv": "^17.2.1",
    "jwt-decode": "^4.0.0",
    "lottie-react-native": "^6.5.1",
    "react": "18.2.0",
    "react-native": "0.73.6",
    "react-native-chart-kit": "^6.12.0",
    "react-native-config": "^1.5.7",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-keychain": "^8.2.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-paper": "^5.10.1",
    "react-native-push-notification": "^8.1.1",
    "react-native-reanimated": "^3.6.2",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-svg": "^14.1.0",
    "react-native-vector-icons": "^10.3.0",
    "react-redux": "^8.1.2",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "^0.73.19",
    "@react-native/eslint-config": "^0.73.2",
    "@react-native/metro-config": "^0.73.3",
    "@react-native/typescript-config": "^0.73.1",
    "@types/react": "~18.2.45",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.3.1",
    "metro-react-native-babel-preset": "^0.73.8",
    "prettier": "^2.8.8",
    "typescript": "~5.3.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/android/",
      "/ios/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|expo|@expo|@unimodules|unimodules|sentry-expo|native-base|react-clone-referenced-element|@react-native-community|expo-.*|@expo/.*|react-navigation|@react-navigation/.*|@sentry/.*|react-native-svg|react-native-chart-kit)/)"
    ]
  },
  "private": true,
  "author": "GluCoPilot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EricSpencer00/GluCoPilot.git"
  },
  "keywords": [
    "diabetes",
    "glucose",
    "cgm",
    "health",
    "react-native",
    "expo",
    "ai",
    "healthcare"
  ]
}
